<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="/dist/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="max-w-3xl mx-auto px-4 py-8">
    
    <div class="flex items-center mb-8 bg-white p-6 rounded-lg shadow-md">

      <div class="flex-shrink-0 mr-6">
        <img 
          class="w-24 h-24 rounded-full border border-gray-300" 
          src="<%= user?.profile?.photoProfile ? user.profile.photoProfile  : 'https://via.placeholder.com/150' %>" 
          alt="Profile Picture"
        >
      </div>
      <div>
        <h2 class="text-3xl font-semibold text-gray-800"><%= user.username %></h2>
        <p class="text-gray-600 mt-1"><%= user?.profile?.biodata ?? 'No bio available' %></p>
        <p class="text-gray-500">Gender: <%= user?.profile?.gender ?? 'Not specified' %></p>
      </div>
    </div>

    <div class="flex justify-center gap-4 mb-8">
      <a href="/profile/<%= user.id %>/edit" class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition font-medium">
        Edit Profile
      </a>
      <a href="/profile/<%= user.id %>/add" class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition font-medium">
        Add Post
      </a>
      <a href="/logout" class="bg-red-500 text-white px-6 py-2 rounded-md hover:bg-red-600 transition font-medium">
        Log Out
      </a>
    </div>


    <h3 class="text-2xl font-semibold text-gray-800 mb-6">Posts</h3>
    <div class="grid grid-cols-3 gap-4">
      <% if (user.posts && user.posts.length > 0) { %>
        <% user.posts.forEach(post => { %>
          <a href=""    class="aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden">
            <img class="object-cover w-full h-full" src="<%= post.imageURL %>" alt="Post Image">
          </a>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500 text-center col-span-3">No posts yet</p>
      <% } %>
    </div>
  </div>
</body>
</html>
