<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profile</title>
  <link href="/dist/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  
</head>
<body class="bg-gray-50 min-h-screen flex justify-center items-center">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">Edit Profile</h2>

    <!-- Form Edit Profile -->
    <form 
    action="/profile/<%= user.id %>/edit" 
    method="POST" 
    enctype="multipart/form-data" 
    class="space-y-4"
    >
    <% if (error) { %>
      <% error = error.split(',') %>
      <% error.forEach(el => { %>
          <p class="text-red-500 text-center mb-4"><%= el %></p>
      <% }) %>
  <% } %>
    <!-- <form 
      action="/profile/<%= user.id %>/edit" 
      method="POST" 
      class="space-y-4"
      > -->
<!--- Form edit profile -->
      <div class="flex justify-center mb-4">
        <img 
          class="w-24 h-24 rounded-full border border-gray-300" 
          src="<%= user?.profile?.photoProfile ? '/uploads/profiles/'+ user.profile.photoProfile  : 'https://via.placeholder.com/150' %>" 
          alt="Profile Picture">
      </div>
      <div>
        <label class="block text-gray-700 mb-1" for="avatar">Change Profile Picture</label>
        <input type="file" name="avatar" id="avatar" class="w-full border border-gray-300 rounded-md p-2">
      </div>

      <div>
        <label class="block text-gray-700 mb-1" for="username">Username</label>
        <input type="text" name="username" id="username" value="<%= user.username %>" class="w-full border border-gray-300 rounded-md p-2">
      </div>

      <div>
        <label class="block text-gray-700 mb-1" for="biodata">Bio</label>
        <textarea name="biodata" id="biodata" rows="3" class="w-full border border-gray-300 rounded-md p-2" placeholder="Tell something about yourself..."><%= user?.profile?.biodata ?? '' %></textarea>
      </div>

      <div>
        <label class="block text-gray-700 mb-1" for="gender">Gender</label>
        <select name="gender" id="gender" class="w-full border border-gray-300 rounded-md p-2">
          <option value="Male" <%= user?.profile?.gender === 'Male' ? 'selected' : '' %>>Male</option>
          <option value="Female" <%= user?.profile?.gender === 'Female' ? 'selected' : '' %>>Female</option>
        </select>
      </div>

      <div class="mt-6">
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md font-medium hover:bg-blue-600 transition">
          Save Changes
        </button>
      </div>

      <div class="mt-4">
        <a href="/profile/<%= user.id %>" class="w-full block text-center bg-gray-300 text-gray-700 py-2 rounded-md font-medium hover:bg-gray-400 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</body>
</html>
